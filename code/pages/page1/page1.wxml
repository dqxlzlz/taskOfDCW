<!-- 意见反馈页面 -->


<!-- 意见反馈的描述 -->
<view class="fb_main">
    <view class="fb_title">问题的种类</view>
    <view class="fb_tips">
        <text>功能建议</text>
        <text>遇到bug</text>
        <text>其他</text>
    </view>


<!-- 意见反馈的内容 -->
    <view class="content">
        <textarea bindinput="handleTextInput" value="{{textVal}}" placeholder="请描述一下你的问题"></textarea>
    </view>
    <view class="form_bt_wrap">
        <button type="warn" bindtap="handleFormSubmit">提交</button>
        <button type="reset">重置</button>
    </view>
</view>